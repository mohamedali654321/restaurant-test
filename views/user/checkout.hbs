<div class="container marketing" style="padding-top: 40px;">
    <div class="text-center" style="padding-right: 200px;">
        <h1>Check Out <i class="fas fa-credit-card"></i></h1>
        {{#if massages}}
             {{#each massages }}
              <div class="alert alert-danger alert-dismissible fade show mt-2 auto-hide" role="alert" style="height: 50px;">
            <p>{{this}}</p>

            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
             {{/each}}
        {{/if}}
       
    </div>
    
    <div class="row">
        <div class="col-md-7 offset-md-2 ">
            <form action="checkout" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text " name="name" id="" placeholder="Enter Your Name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text " name="address" id="" placeholder="Enter Your Address" class="form-control">
                </div>
                <div class="form-group">
                    <label for="credit-card-name">Credit-Card Name</label>
                    <input type="text " name="credit-card-name" id="" placeholder="Enter Your Credit-Card Name"
                        class="form-control">
                </div>
                <div class="form-group">
                    <label for="credit-card-number">Credit-Card Number</label>
                    <input type="number" name="credit-card-number" id="" placeholder="Enter Your Credit-Card Number"
                        class="form-control">
                </div>
                <div class="row">
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label for="expire-month">Credit-Card Expire Month</label>
                            <input type="number" name="expire-month" id=""
                                placeholder="Enter Your Credit-Card Expire-Month" class="form-control">
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="expire-year">Credit-Card Expire Year</label>
                            <input type="number" name="expire-year" id=""
                                placeholder="Enter Your Credit-Card Expire-Year" class="form-control">
                        </div>
                    </div>

                </div>
                          <div class="form-group">
                             <label for="cvc">CVC</label>
                             <input type="number" name="cvc" id=""
                                placeholder="Enter Your Credit-Card CVC" class="form-control">
                        </div>
                        <div class="text-center">
                             <h6 style="font-weight: bold;">Total Price: {{price}}$</h6> 

                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success" style="width: 200px;">Buy {{price}}$</button>

                        </div>




















            </form>




        </div>


    </div>

</div>