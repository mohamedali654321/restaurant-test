    <main role="main">
        
        <div class="container marketing ">
            <div class="container">
            <form action="search" method="get" style="padding-top: 30px;padding-left:290px;">
         <input type="text" name="search" id="" class="form-control float-left text-center" style="width: 400px;padding-left:200px;" placeholder="Search(L).... " >
  
         <div style="padding-left: 20px;">
             <button type="submit"  class="btn btn-outline-success  " >Search <i class="fa fa-search"></i></i></button>
          </div>
          </form>

          </div>



            

            <h2 id="products"> <i> Products</i></h2>
            <hr class="border border-warning p-0">
            {{#each products }}
            <div class="row">
                {{#each this }}
                <div class="col-sm-4">
                    <div class="card border border-warning p-3">
                        <div class="text-center">
                            <img src="{{this.imagePath}}" style="height: 300px;" class="card-img-top" alt="">
                            <br>
                            <div class="text-left" style="padding-left: 17px;">
                                <p>
                                    <i class="fa fa-star " style="color:gold;"></i>
                                    <i class="fa fa-star" style="color: gold;"></i>
                                    <i class="fa fa-star" style="color: gold;"></i>
                                    <i class="fa fa-star" style="color: gold;"></i>
                                    <i class="fa fa-star" style="color: ;"></i>
                                </p>
                            </div>


                        </div>


                        <div class="card-body">
                            <h5 class="card-title">{{this.productName}}</h5>
                            <p class="card-text">{{this.information}}</p>
                            <div class="clear-fix">
                                {{#if  ../../chekuser}}
                                <a href="/addToCart/{{this._id}}/{{this.price}}/{{this.productName}}"
                                    class="btn btn-outline-warning  float-right"><i class="fas fa-shopping-cart"></i> Add To Cart</a>
                                {{else}}
                                <button type="button" class="btn btn-outline-warning  float-right " data-toggle="modal"
                                    data-target="#exampleModal">
                                     <i class="fas fa-shopping-cart"></i> Add To Cart
                                </button>
                                {{/if}}


                                <div class=" price float-left">Price: <i class="text-warning"
                                        style="font-weight: 20px;">{{this.price}}$</i>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                {{/each}}
            </div>

            {{/each}}




        </div>
         







    </main>
